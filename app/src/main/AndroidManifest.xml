<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.alw.atchiangmai">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ChiangMai">
        <activity android:name=".ui.SplashActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".ui.MoreActivity" android:theme="@style/Theme.AppCompat.Light.NoActionBar" android:screenOrientation="sensor" />
        <activity android:name=".ui.UserActivity"  android:theme="@style/Theme.AppCompat.Light.NoActionBar" android:screenOrientation="sensor"/>

        <activity android:name=".ui.PoliceStationDetailActivity" android:theme="@style/Theme.AppCompat.Light.NoActionBar" android:screenOrientation="sensor" />
        <activity android:name=".ui.PoliceActivity" android:theme="@style/Theme.AppCompat.Light.NoActionBar" android:screenOrientation="sensor" />

        <activity android:name=".ui.ExchangeActivity" android:theme="@style/Theme.AppCompat.Light.NoActionBar" android:screenOrientation="sensor"/>
        <activity
            android:name=".ui.HospitalActivity"
            android:parentActivityName="MainActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar"
            android:screenOrientation="sensor"/>
        <activity
            android:name=".ui.HospitalDetailActivity"
            android:parentActivityName="MainActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar"
            android:screenOrientation="sensor"/>
        <activity
            android:name=".ui.OTOPActivity"
            android:parentActivityName="MainActivity"
            android:screenOrientation="sensor"/>

        <activity android:name=".ui.FeedActivity" android:theme="@style/Theme.AppCompat.Light.NoActionBar" android:screenOrientation="sensor" />

        <activity android:name=".ui.RestaurantActivity" android:theme="@style/Theme.AppCompat.Light.NoActionBar" android:screenOrientation="sensor" />
        <activity android:name=".ui.DetailRestaurantActivity" android:theme="@style/Theme.AppCompat.Light.NoActionBar" android:screenOrientation="sensor" />
        <activity android:name=".MainActivity" android:theme="@style/Theme.AppCompat.Light.NoActionBar"/>
    </application>

</manifest>