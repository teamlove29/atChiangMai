<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:orientation="horizontal">

                    <GridLayout
                        android:id="@+id/gridCategoryOtop"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:alignmentMode="alignMargins"
                        android:columnCount="4"
                        android:padding="10dp"
                        android:rowCount="1">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:padding="5dp">

                            <androidx.cardview.widget.CardView
                                android:id="@+id/cvFoodOtop"
                                android:layout_width="60dp"
                                android:layout_height="50dp"
                                android:layout_gravity="center_horizontal"
                                android:foreground="@color/black">

                            </androidx.cardview.widget.CardView>

                            <TextView
                                android:id="@+id/tvFoodOtop"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:text="@string/food_otop"
                                android:textSize="@dimen/txt_otop_category" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:padding="5dp">

                            <androidx.cardview.widget.CardView
                                android:id="@+id/cvDrinkOtop"
                                android:layout_width="60dp"
                                android:layout_height="50dp"
                                android:layout_gravity="center_horizontal"
                                android:foreground="@color/purple_200">

                            </androidx.cardview.widget.CardView>

                            <TextView
                                android:id="@+id/tvDrinkOtop"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:text="@string/drink_otop"
                                android:textSize="@dimen/txt_otop_category" />
                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:padding="5dp">

                            <androidx.cardview.widget.CardView
                                android:id="@+id/cvShirtOtop"
                                android:layout_width="60dp"
                                android:layout_height="50dp"
                                android:layout_gravity="center_horizontal"
                                android:foreground="@color/purple_500">

                            </androidx.cardview.widget.CardView>

                            <TextView
                                android:id="@+id/tvShirtOtop"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:text="@string/shirt_otop"
                                android:textSize="@dimen/txt_otop_category" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:padding="5dp">

                            <androidx.cardview.widget.CardView
                                android:id="@+id/cvAccessoriesOtop"
                                android:layout_width="60dp"
                                android:layout_height="50dp"
                                android:layout_gravity="center_horizontal"
                                android:foreground="@color/purple_700">

                            </androidx.cardview.widget.CardView>

                            <TextView
                                android:id="@+id/tvAccessoriesOtop"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:text="@string/accessories_otop"
                                android:textSize="@dimen/txt_otop_category" />
                        </LinearLayout>
                    </GridLayout>
                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvOTOP_Lists"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="10dp"
                    tools:listitem="@layout/item_otop_lists"/>
            </LinearLayout>
        </ScrollView>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>